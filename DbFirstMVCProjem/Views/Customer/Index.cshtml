@model IEnumerable<DbFirstMVCProjem.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>List of Customers</h2>
@Html.ActionLink("Add New Customer", "Create", null, new {@class="btn btn-success"})
<table class="table table-bordered" style="background-color:#191C24; color: white;">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Customer Adress</th>
            <th>Customer Mail</th>
            <th>Customer Birthdate</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.customerID</td>
                    <td>@item.customerName</td>
                    <td>@item.customerPhone</td>
                    <td>@item.customerAdress</td>
                    <td>@item.customerMail</td>
                    <td>@item.customerBirthDate</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.customerID }, new {@class="btn btn-light"})
                        @Html.ActionLink("Delete", "Delete", new { id = item.customerID }, new {@class="btn btn-danger"})
                    </td>
                </tr>
            }
    </tbody>
</table>

