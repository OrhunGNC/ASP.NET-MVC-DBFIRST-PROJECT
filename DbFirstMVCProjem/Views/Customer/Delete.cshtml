@model DbFirstMVCProjem.Models.Customer
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Are You Sure You Want To Delete This Customer</h2>
@using (Html.BeginForm())
            {
                @Html.HiddenFor(x=>x.customerID)
    <table class="table table-danger">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Customer Phone</th>
                <th>Customer Adress</th>
                <th>Customer Mail</th>
                <th>Customer Birthdate</th>
            </tr>
        </thead>
        <tbody> 
            <tr>
                <td>@Model.customerID</td>
                <td>@Model.customerName</td>
                <td>@Model.customerPhone</td>
                <td>@Model.customerAdress</td>
                <td>@Model.customerMail</td>
                <td>@Model.customerBirthDate</td>
            </tr>
        </tbody>
    </table>
    <input type="submit" class="btn btn-danger" value="Delete" />
    @Html.ActionLink("Back To List", "Index", null, new {@class="btn btn-light"})
            }
