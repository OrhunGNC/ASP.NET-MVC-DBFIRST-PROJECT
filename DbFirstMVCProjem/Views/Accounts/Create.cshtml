@model DbFirstMVCProjem.Models.Account
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create New Account</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.accountBalance, "Account Balance")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.accountBalance, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.accountType, "Account Type")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.accountType, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.customerID, "Customer Name")
            <br />
            <div class="col-md-4">
                @Html.DropDownListFor(x => x.customerID, (List<SelectListItem>)ViewBag.veri)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.branchID, "Branch Adress")
            <br />
            <div class="col-md-4">
                @Html.DropDownListFor(x => x.branchID,(List<SelectListItem>)ViewBag.veri2)
            </div>
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-success" value="Create" />
    @Html.ActionLink("Back To List", "Index", null, new {@class="btn btn-light"})
}


