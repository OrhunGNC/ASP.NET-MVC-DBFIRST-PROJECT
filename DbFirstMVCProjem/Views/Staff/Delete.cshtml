@model DbFirstMVCProjem.Models.Staff
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Delete Staff</h2>
@using (Html.BeginForm())
            {
                <table class="table table-danger">
                    <thead>
                        <tr>
                            <th>Staff ID</th>
                            <th>Staff Name</th>
                            <th>Staff Phone</th>
                            <th>Staff Adress</th>
                            <th>Staff Title</th>
                            <th>Staff Salary</th>
                            <th>Branch Adress</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.staffID</td>
                            <td>@Model.staffName</td>
                            <td>@Model.staffPhone</td>
                            <td>@Model.staffAdress</td>
                            <td>@Model.staffTitle</td>
                            <td>@Model.staffSalary</td>
                            <td>@Model.Branch.branchAdress</td>
                        </tr>
                    </tbody>
                </table>
                <input type="submit" class="btn btn-danger" value="Delete" />
                @Html.ActionLink("Back To List", "Index", null, new {@class="btn btn-light"})
            }

