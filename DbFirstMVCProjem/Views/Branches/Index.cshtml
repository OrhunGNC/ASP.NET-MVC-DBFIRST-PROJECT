@model IEnumerable<DbFirstMVCProjem.Models.Branch>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Branches Table</h2>
@Html.ActionLink("Create New Branch", "Create", "Branches", null, new {@class="btn btn-success"})
<br />
@using (Html.BeginForm())
            {
    <p>Type to search by branch adress in table</p>
    <br />
    @Html.TextBox("x")
    <input type="submit" class="btn btn-success" value="Search" />
            }
<br />
<table class="table table-bordered" style="background-color:#191C24; color: white;">
    <thead>
        <tr>
            <th>BranchID</th>
            <th>Branch Adress</th>
            <th>Branch Phone</th>
            <th>Branch Capital</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.branchID</td>
                    <td>@item.branchAdress</td>
                    <td>@item.branchPhone</td>
                    <td>@item.branchCapital</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Branches", new { id = item.branchID }, new {@class="btn btn-light"})
                        @Html.ActionLink("Delete", "Delete", "Branches", new { id = item.branchID }, new {@class="btn btn-danger"})
                    </td>
                </tr>
            }
    </tbody>
</table>
