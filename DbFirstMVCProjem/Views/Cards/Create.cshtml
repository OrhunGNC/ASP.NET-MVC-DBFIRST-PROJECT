@model DbFirstMVCProjem.Models.Card
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.cardType, "Card Type")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.cardType)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.cardLimit, "Card Limit")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.cardLimit)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.accountNo, "Account No")
            <br />
            <div class="col-md-4">
                @Html.DropDownListFor(x => x.accountNo, (List<SelectListItem>)ViewBag.veri)
            </div>
        </div>
        <br />
        <input type="submit" class="btn btn-success" value="Create" />
        @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-light" })
    </div>
}


