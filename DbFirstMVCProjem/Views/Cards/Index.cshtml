@model IEnumerable<DbFirstMVCProjem.Models.Card>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>List Of Cards</h2>
@Html.ActionLink("Create New Card", "Create", null, new { @class = "btn btn-success" })
<br />
@using (Html.BeginForm())
            {
                <p>Type to search by card type in table</p>
                <br />
                @Html.TextBox("x")
                <input type="submit" class="btn btn-success" value="Search" />
                <br />
            }
<table class="table table-bordered" style="background-color:#191C24; color: white;">
    <thead>
        <tr>
            <th>Card ID</th>
            <th>Card Type</th>
            <th>Card Limit</th>
            <th>Account No</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.cardID</td>
                <td>@item.cardType</td>
                <td>@item.cardLimit</td>
                <td>@item.accountNo</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.cardID }, new { @class = "btn btn-light" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.cardID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
